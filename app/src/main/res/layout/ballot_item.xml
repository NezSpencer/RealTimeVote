<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/inter_block_margin"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginBottom="@dimen/inter_view_margin"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_electoral_position"
            android:layout_width="wrap_content"
            android:textSize="@dimen/title_text_size"
            tools:text="President"
            android:layout_marginBottom="@dimen/inter_block_margin"
            android:layout_height="wrap_content" />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_contestants"
            android:layout_marginStart="@dimen/inter_block_margin"
            android:layout_width="match_parent"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            android:layout_height="wrap_content"/>


    </LinearLayout>
</layout>